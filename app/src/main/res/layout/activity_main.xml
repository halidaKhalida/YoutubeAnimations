<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#DFA802">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/tv_toolbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AnimationProgect2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />





                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/aw"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/la_loading"
                android:layout_width="match_parent"
                app:lottie_fileName="animation2.json"
                app:lottie_loop="true"
                android:layout_height="220dp"/>
            <TextView
                android:id="@+id/tv_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telegram"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="fgdfhfdtghfd dfghfdghfgthfd fgfgfg\ndfgdfgdfgh dfgdfghjghfgj fghfh"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b_anim1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="anim1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#3F51B5"
                    app:backgroundTint="@null" />

                <Button
                    android:text="anim2"
                    android:id="@+id/b_anim2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/b_anim1"
                    android:background="#3F51B5"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/b_anim3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="anim3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/b_anim2"
                    android:background="#3F51B5"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/b_anim4"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/b_anim1"
                    android:layout_marginStart="10dp"
                    android:text="anim4"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#3F51B5"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/b_anim5"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/b_anim2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="anim5"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/b_anim4"
                    android:background="#3F51B5"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/b_anim6"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/b_anim3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="anim6"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/b_anim5"
                    android:background="#3F51B5"
                    app:backgroundTint="@null" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>